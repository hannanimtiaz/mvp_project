<%- include('../partials/html_start.ejs') %>
    <!-- Modal -->
    <div class="modal fade" id="createRoomModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="" class="createRoomform">
                        <div class="form-group">
                            <label for="roomName">Project Name</label>
                            <input type="text" class="form-control" id="roomName" placeholder="Enter Room Name">
                        </div>
                        <button type="submit" class="btn btn-primary submit_btn" data-dismiss="modal" project_id='<%= project._id %>'>Create</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary createRoom" 
                        data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <h1>
        <%= project.name %>
    </h1>
    <div style="width: 500px; background-color: darkgoldenrod; border-radius: 30px; min-height: 300px;padding: 20px;">
        <div>
            <h3 style="width: 50px;">Rooms</h3>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createRoomModal">
                Create Room
            </button>
        </div>
        <% if (project.room_ids.length==0) { %>
            No Rooms
        <% } else { %>
            <% project.room_ids.forEach(room => { %>
                <div style="background-color: firebrick; padding: 5px; border-radius: 20px;">
                    <%= room.name %> 
                </div>
            <% }) %>     
        <% }  %>
    </div>

    <script>
        $('.submit_btn').click(function (e) {
            let name = $('#roomName').val()
            console.log('$(this): ', $(this));
            let project_id = $(this).attr('project_id')
            console.log('name: ', name);
            console.log('project_id: ', project_id);
            e.preventDefault()
            $.ajax({
                type: 'POST',
                url: '/user/createRoom',
                data: {
                    name,
                    project_id
                },
                success:function(data){
                    console.log('data: ', data);
                    if(data.status == 'success'){
                        alert(data.msg)
                        setTimeout(() => {
                            location.reload()
                        }, 2000);
                    }
                }
            })
        })
    </script>
    <%- include('../partials/html_end.ejs') %>